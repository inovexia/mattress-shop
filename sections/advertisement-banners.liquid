<section class="advertisement-banner">
  <div class="container">
    <div class="row">
      <div class="col-12 col-md-7">
        <a href="{{ section.settings.advertisement_url1 }}">
        {% if section.settings.advertisement_image1 != blank %}
        {{ section.settings.advertisement_image1 | image_url: width: 1000 | image_tag:
          loading: 'lazy',
          alt: section.settings.advertisement_image1.alt | escape
        }}
        {% else %}
        <img src="{{ 'gallery-large.jpg' | asset_img_url: '' }}" alt="Image Left" />
        {% endif %}
      </a>
      </div>
      <div class="col-12 col-md-5">
        <div class="image-grid">
          <a href="{{ section.settings.advertisement_url2 }}">
            {% if section.settings.advertisement_image2 != blank %}
            {{ section.settings.advertisement_image2 | image_url: width: 1000 | image_tag:
              loading: 'lazy',
              alt: section.settings.advertisement_image2.alt | escape
            }}
            {% else %}
            <img src="{{ 'gallery-small1.jpg' | asset_img_url: '' }}" alt="Image Left" />
            {% endif %}
          </a>
          <a href="{{ section.settings.advertisement_url3 }}">
            {% if section.settings.advertisement_image3 != blank %}
            {{ section.settings.advertisement_image3 | image_url: width: 1000 | image_tag:
              loading: 'lazy',
              alt: section.settings.advertisement_image3.alt | escape
            }}
            {% else %}
            <img src="{{ 'gallery-small2.jpg' | asset_img_url: '' }}" alt="Image Left" />
            {% endif %}
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="collection-image">
  
      

  </div>
</section>

{% schema %}
{
  "name": "Advertisement Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "advertisement_image1",
      "label": "Advertisement Image 1"
    },
    {
      "type": "url",
      "id": "advertisement_url1",
      "label": "Advertisement Link 1"
    },
    {
      "type": "image_picker",
      "id": "advertisement_image2",
      "label": "Advertisement Image 2"
    },
    {
      "type": "url",
      "id": "advertisement_url2",
      "label": "Advertisement Link 2"
    },
    {
      "type": "image_picker",
      "id": "advertisement_image3",
      "label": "Advertisement Image 3"
    },
    {
      "type": "url",
      "id": "advertisement_url3",
      "label": "Advertisement Link 3"
    }
  ],
  "presets": [
    {
      "name": "Advertisement Banner"
    }
  ]
}
{% endschema %}